<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AttendCheck_1q">

    <TextView
            android:id="@+id/TextView"
            android:textSize="20sp"
            android:layout_width="180dp"
            android:layout_height="32dp"
            android:text="@string/back"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/attendlist"/>

    <TextView
            android:id="@+id/attendlist"
            android:gravity="center"
            android:textColor="#000000"
            android:background="#66cc66"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"/>

    <ListView

            android:layout_width="match_parent"
            android:layout_height="585dp"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/myListView"
            app:layout_constraintTop_toBottomOf="@+id/attendlist"/>
</android.support.constraint.ConstraintLayout>