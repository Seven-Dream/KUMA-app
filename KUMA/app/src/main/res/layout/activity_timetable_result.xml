<?xml version="1.0" encoding="utf-8"?>
<!-- 講義検索結果 -->
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".TimetableResult"
        android:orientation="vertical">

    <!-- ページタイトルの表示 -->
    <TextView
            android:id="@+id/title_result"
            android:background="#66CC66"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/result_lecture"
            android:textSize="30sp"
            android:gravity="center"
    />

    <!-- 講義検索へ戻る -->
    <TextView
            android:id="@+id/ViewReturnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/ReturnSentence"
    />

    <!-- 検索結果の各項目の表示 -->
    <HorizontalScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".TimetableResult">

        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:context=".TimetableResult"
                android:orientation="vertical">
            <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:context=".TimetableResult"
                    android:orientation="horizontal">
                <!-- ボタン部分の空白 -->
                <TextView
                        android:id="@+id/list_button_blank"
                        android:layout_width="75dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                />
                <!--各項目の項目名-->
                <TextView
                        android:id="@+id/item_lecture"
                        android:text="@string/lecture_name"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="#FFA500"
                />
                <TextView
                        android:id="@+id/item_teacher"
                        android:text="@string/teacher_name"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="#FFA500"
                />
                <TextView
                        android:id="@+id/item_classroom"
                        android:text="@string/classroom"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="#FFA500"
                />
                <TextView
                        android:id="@+id/item_quarter"
                        android:text="@string/held_quarter"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="#FFA500"
                />
                <TextView
                        android:id="@+id/item_week"
                        android:text="@string/day_week"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="#FFA500"
                />
                <TextView
                        android:id="@+id/item_period"
                        android:text="@string/period_time"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="#FFA500"
                />
                <TextView
                        android:id="@+id/item_year"
                        android:text="@string/held_year"
                        android:layout_width="75dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="#FFA500"
                />
            </LinearLayout>

             <ListView
                        android:id="@+id/listView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
             />
        </LinearLayout>


    </HorizontalScrollView>

    <!--戻るボタン-->

    <!--
    <Button
            android:id="@+id/return_result"
            android:textSize="22sp"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/back"
            android:background="@drawable/button_style1"
            android:layout_marginTop="40dp"
    />
    -->

</LinearLayout>