<?xml version="1.0" encoding="utf-8"?>
<!-- 講義検索結果 -->
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".TimetableResult"
        android:orientation="vertical">

    <!-- ページタイトルの表示 -->
    <TextView
            android:id="@+id/title_result"
            android:background="@+id/background_page_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/result_lecture"
            android:textSize="30sp"
            android:gravity="center"
            tools:ignore="RtlCompat"
    />

    <!-- 検索結果の各項目の表示 -->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/item_lecture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="20sp"
                    tools:text="@string/lecture_name"
            />
            <ListView
                    android:id="@+id/list_lecture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/item_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="20sp"
                    tools:text="@string/teacher_name"
                    tools:ignore="RtlHardcoded,UnknownId"/>
            <ListView
                    android:id="@+id/list_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlHardcoded"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/item_classroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="20sp"
                    tools:text="@string/classroom"
                    tools:ignore="RtlHardcoded"
            />
            <ListView
                    android:id="@+id/list_classroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlHardcoded"
            />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>