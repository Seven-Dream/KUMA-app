<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Schedule">

    <CalendarView
            android:layout_height="373dp"
            android:id="@+id/calendarView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:showWeekNumber="false"
            android:layout_width="410dp"/>
    <Button
            android:text="@string/timeschedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeSchedule" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="250dp"
            android:layout_marginRight="250dp" android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>