<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <!--登録ボタン-->
    <Button
            android:id="@+id/entry_lecture"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/entry"
    />
    <!--各項目-->
    <TextView
            android:id="@+id/list_lecture"
            android:text="@string/lecture_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
    />
    <TextView
            android:id="@+id/list_teacher"
            android:text="@string/teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
    />
    <TextView
            android:id="@+id/list_classroom"
            android:text="@string/classroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
    />
    <TextView
            android:id="@+id/list_quarter"
            android:text="@string/held_quarter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
    />
    <TextView
            android:id="@+id/list_week"
            android:text="@string/day_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
    />
    <TextView
            android:id="@+id/list_period"
            android:text="@string/period_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
    />
    <TextView
            android:id="@+id/list_year"
            android:text="@string/held_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
    />
</LinearLayout>